{{define "base"}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Anchorpoint-IT | Network Suite</title>
    
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&family=JetBrains+Mono:wght@500&display=swap" rel="stylesheet">
    
    <style>
        :root {
            /* Brand Identity [cite: 3, 4] */
            --bg: #0b1220;
            --navy: #0b3a5a;
            --teal: #4ade80; /* High-visibility teal for terminal [cite: 13] */
            
            /* Glassmorphism UI [cite: 3, 10] */
            --card: rgba(255, 255, 255, 0.06);
            --stroke: rgba(255, 255, 255, 0.12);
            --text: #ffffff;
            --muted: rgba(255, 255, 255, 0.85); /* Increased for readability */
            --radius: 16px;
            --shadow: 0 20px 70px rgba(0, 0, 0, 0.45);
        }

        body {
            margin: 0;
            background:
                radial-gradient(1200px 600px at 30% 10%, rgba(43, 176, 166, 0.18), transparent 55%),
                radial-gradient(900px 500px at 80% 20%, rgba(11, 58, 90, 0.28), transparent 60%),
                var(--bg);
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
            color: var(--text);
            display: flex;
            height: 100vh;
            overflow: hidden; /* Prevent double scrollbars */
        }

        /* Fixed Glassmorphism Sidebar [cite: 7] */
        .sidebar {
            width: 260px;
            background: rgba(11, 18, 32, 0.85);
            backdrop-filter: blur(12px);
            border-right: 1px solid var(--stroke);
            display: flex;
            flex-direction: column;
            padding: 24px;
            flex-shrink: 0;
        }

        .sidebar h2 {
            font-weight: 800;
            font-size: 1.25rem;
            margin-bottom: 30px;
            display: flex;
            align-items: center;
            gap: 12px;
            color: #ffffff;
            text-shadow: 0 2px 4px rgba(0,0,0,0.3);
        }

        /* Navigation [cite: 11] */
        .nav-section-label {
            color: var(--teal);
            font-size: 0.7rem;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            margin: 20px 0 10px 0;
            font-weight: 700;
        }

        .nav-link {
            color: var(--muted);
            text-decoration: none;
            font-weight: 600;
            font-size: 0.95rem;
            padding: 10px 14px;
            border-radius: 10px;
            transition: all 0.2s ease;
            display: block;
        }

        .nav-link:hover, .nav-link.active {
            color: #ffffff;
            background: rgba(255, 255, 255, 0.08);
        }

        /* Scrollable Main Content [cite: 42] */
        .main-container {
            flex-grow: 1;
            height: 100vh;
            overflow-y: auto;
            display: flex;
            flex-direction: column;
            background: transparent;
            scroll-behavior: smooth;
        }

        /* Application Header [cite: 27, 28] */
        .app-header {
            background: rgba(11, 15, 20, 0.9);
            backdrop-filter: blur(10px);
            padding: 20px 30px;
            border-bottom: 1px solid var(--stroke);
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: sticky;
            top: 0;
            z-index: 100;
        }

        /* Enhanced Card Visibility [cite: 9, 10] */
        .card {
            border: 1px solid var(--stroke);
            border-radius: var(--radius);
            background: var(--card);
            backdrop-filter: blur(10px);
            box-shadow: var(--shadow);
            margin-bottom: 24px;
            padding: 20px;
        }

        .card h3 {
            color: #ffffff;
            font-weight: 700;
            margin-top: 0;
            letter-spacing: 0.5px;
            text-transform: uppercase;
            font-size: 0.85rem;
        }

        /* Buttons [cite: 15, 17] */
        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 10px 20px;
            border-radius: 999px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            background: rgba(255, 255, 255, 0.08);
            color: #ffffff;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.12s ease;
        }

        .btn:hover {
            transform: translateY(-1px);
            background: rgba(255, 255, 255, 0.15);
            border-color: rgba(255, 255, 255, 0.3);
        }

        .btn.primary {
            background: linear-gradient(135deg, var(--navy), #0e4f73);
            border-color: rgba(43, 176, 166, 0.45);
        }

        /* High-Contrast Terminal Output [cite: 13, 49] */
        pre {
            background: rgba(0, 0, 0, 0.5);
            border: 1px solid var(--stroke);
            color: var(--teal);
            padding: 1.25rem;
            font-family: 'JetBrains Mono', monospace;
            font-size: 0.9rem;
            font-weight: 500;
            line-height: 1.6;
            border-radius: 12px;
            overflow-x: auto;
            text-shadow: 0 0 5px rgba(74, 222, 128, 0.15);
        }

        /* Custom Scrollbar */
        .main-container::-webkit-scrollbar { width: 8px; }
        .main-container::-webkit-scrollbar-thumb {
            background: var(--navy);
            border-radius: 10px;
        }
        .main-container::-webkit-scrollbar-track { background: rgba(0,0,0,0.1); }
    </style>
</head>
<body>
    <div class="sidebar">
<h2 style="display: flex; align-items: center; gap: 12px; margin-bottom: 30px;">
    <img src="https://anchorpoint-it.com/assets/logo-512.png" 
         alt="Anchorpoint-IT Logo" 
         style="width: 32px; height: 32px; object-fit: contain; filter: drop-shadow(0 2px 4px rgba(0,0,0,0.2));">
    
    <span style="font-weight: 800; font-size: 1.25rem; background: linear-gradient(to right, #60a5fa, #2563eb); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
        Anchorpoint-IT
    </span>
</h2>
        
        <nav style="display: flex; flex-direction: column; gap: 4px; flex-grow: 1;">
            <div class="nav-section-label">Diagnostics</div>
            <a href="/" class="nav-link active">Dashboard</a>
            <a href="#map" class="nav-link">Path Visualization</a>
            
            <div class="nav-section-label">System</div>
            <a href="#logs" class="nav-link">Server Logs</a>
        </nav>

        <div style="padding-top: 20px; border-top: 1px solid var(--stroke);">
            <div class="nav-section-label" style="margin-top: 0;">Resource Monitor</div>
            <div style="height: 120px; width: 100%;">
                <canvas id="resourceChart"></canvas>
            </div>
        </div>
    </div>

    <div class="main-container">
        <header class="app-header">
            <div style="font-weight: 700; font-size: 0.95rem;">
                <span style="color: var(--teal);">‚óè</span> {{.ServerPublicIP}} 
            </div>
            <div style="font-size: 0.85rem; color: var(--muted); font-weight: 600;">
                {{.ClientIP}} | Mem: {{.MemoryUsage}}
            </div>
        </header>

        <main style="padding: 30px;">
            {{template "main" .}}
        </main>
    </div>
    
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
</body>
</html>
{{end}}