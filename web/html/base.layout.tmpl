{{define "base"}}
<!DOCTYPE html>
<html lang="en">
<head>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <meta charset="UTF-8">
    <title>Anchorpoint-IT | Network Suite</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=JetBrains+Mono&display=swap" rel="stylesheet">
    <style>
        :root {
  --bg: #0b1220; /* Deep navy from your main site [cite: 3] */
  --card: rgba(255, 255, 255, 0.06);
  --stroke: rgba(255, 255, 255, 0.10);
  --text: rgba(255, 255, 255, 0.92);
  --muted: rgba(255, 255, 255, 0.72);
  --navy: #0b3a5a; /* Anchorpoint navy [cite: 4] */
  --teal: #2bb0a6; /* Anchorpoint teal [cite: 4] */
  --radius: 16px;
  --shadow: 0 20px 70px rgba(0, 0, 0, 0.45);
}

body {
  margin: 0;
  /* Brand-matching radial background [cite: 5] */
  background:
    radial-gradient(1200px 600px at 30% 10%, rgba(43, 176, 166, 0.18), transparent 55%),
    radial-gradient(900px 500px at 80% 20%, rgba(11, 58, 90, 0.28), transparent 60%),
    var(--bg);
  font-family: system-ui, -apple-system, sans-serif; [cite: 6]
  color: var(--text);
  display: flex;
  height: 100vh;
}

/* Glassmorphism Sidebar  */
.sidebar {
  width: 260px;
  background: rgba(11, 18, 32, 0.8);
  backdrop-filter: blur(12px);
  border-right: 1px solid var(--stroke);
  display: flex;
  flex-direction: column;
  padding: 24px;
}

/* Surface/Card Styling [cite: 9, 10] */
.card {
  border: 1px solid var(--stroke);
  border-radius: var(--radius);
  background: var(--card);
  backdrop-filter: blur(10px);
  box-shadow: var(--shadow);
  margin-bottom: 24px;
  padding: 20px;
}

/* Rebranded Buttons [cite: 15, 17] */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 10px 18px;
  border-radius: 999px; /* Pill shape from site CSS [cite: 15] */
  border: 1px solid rgba(255, 255, 255, 0.16);
  background: rgba(255, 255, 255, 0.06);
  color: var(--text);
  font-weight: 600;
  cursor: pointer;
  transition: transform .08s ease, background .12s ease;
}

.btn.primary {
  background: linear-gradient(135deg, var(--navy), #0e4f73); /* Branded gradient [cite: 17] */
  border-color: rgba(43, 176, 166, 0.45);
}

/* Terminal Outputs using Brand Teal [cite: 13] */
pre {
  background: rgba(0, 0, 0, 0.3);
  border: 1px solid var(--stroke);
  color: var(--teal); /* Branded diagnostic text [cite: 13] */
  padding: 16px;
  font-family: 'JetBrains Mono', monospace;
  font-size: 0.85rem;
  border-radius: 8px;
  overflow-x: auto;
}

.main-container {
  flex-grow: 1;
  height: 100vh;
  overflow-y: auto; /* THIS ENABLES SCROLLING for the content area  */
  display: flex;
  flex-direction: column;
}
    </style>
</head>
<body>
<div class="sidebar">
    <h2 style="display: flex; align-items: center; gap: 12px; margin-bottom: 30px; font-size: 1.25rem;">
        <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" style="color: var(--accent);">
            <circle cx="12" cy="5" r="3"></circle>
            <path d="M6.5 8l-4.5 4.5 4.5 4.5"></path>
            <path d="M17.5 8l4.5 4.5-4.5 4.5"></path>
            <line x1="12" y1="8" x2="12" y2="21"></line>
        </svg>
        <span style="background: linear-gradient(to right, #60a5fa, #2563eb); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
            Anchorpoint-IT
        </span>
    </h2>
    
    <nav style="display: flex; flex-direction: column; gap: 12px; flex-grow: 1;">
        <div style="color: #94a3b8; font-size: 0.7rem; text-transform: uppercase; letter-spacing: 1px;">Diagnostics</div>
        <a href="/" style="color: white; text-decoration: none; font-weight: 600;">Dashboard</a>
        <a href="#map" style="color: #94a3b8; text-decoration: none;">Path Visualization</a>
        
        <div style="margin-top: 20px; color: #94a3b8; font-size: 0.7rem; text-transform: uppercase; letter-spacing: 1px;">System</div>
        <a href="#logs" style="color: #94a3b8; text-decoration: none;">Server Logs</a>
    </nav>

    <div style="padding-top: 20px; border-top: 1px solid #334155;">
        <div style="color: #94a3b8; font-size: 0.7rem; text-transform: uppercase; margin-bottom: 10px;">Resource Monitor</div>
        <div style="height: 120px; width: 100%;">
            <canvas id="resourceChart"></canvas>
        </div>
    </div>
</div>

<div class="main-container">
    <header class="app-header">
        </header>

    <main style="padding: 30px;">
        {{template "main" .}}
    </main>
</div>
    
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
</body>
</html>
{{end}}