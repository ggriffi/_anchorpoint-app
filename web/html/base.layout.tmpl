{{define "base"}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Anchorpoint-IT | Network Suite</title>
    
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&family=JetBrains+Mono:wght@500&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --bg: #0b1220;
            --navy: #0b3a5a;
            --teal: #4ade80;
            --card: rgba(255, 255, 255, 0.06);
            --stroke: rgba(255, 255, 255, 0.12);
            --text: #ffffff;
            --muted: rgba(255, 255, 255, 0.85);
            --radius: 16px;
            --shadow: 0 20px 70px rgba(0, 0, 0, 0.45);
        }

        body {
            margin: 0;
            background: radial-gradient(1200px 600px at 30% 10%, rgba(43, 176, 166, 0.18), transparent 55%),
                        radial-gradient(900px 500px at 80% 20%, rgba(11, 58, 90, 0.28), transparent 60%),
                        var(--bg);
            font-family: 'Inter', sans-serif;
            color: var(--text);
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        .sidebar {
            width: 260px;
            background: rgba(11, 18, 32, 0.85);
            backdrop-filter: blur(12px);
            border-right: 1px solid var(--stroke);
            display: flex;
            flex-direction: column;
            padding: 24px;
            flex-shrink: 0;
        }

        .nav-section-label {
            color: var(--teal);
            font-size: 0.7rem;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            margin: 20px 0 10px 0;
            font-weight: 700;
        }

        .nav-link {
            color: var(--muted);
            text-decoration: none;
            font-weight: 600;
            font-size: 0.95rem;
            padding: 10px 14px;
            border-radius: 10px;
            transition: all 0.2s ease;
            display: block;
        }

        .nav-link:hover {
            color: #ffffff;
            background: rgba(255, 255, 255, 0.08);
        }

        .main-container {
            flex-grow: 1;
            height: 100vh;
            overflow-y: auto;
            display: flex;
            flex-direction: column;
        }

        .app-header {
            background: rgba(11, 15, 20, 0.9);
            backdrop-filter: blur(10px);
            padding: 20px 30px;
            border-bottom: 1px solid var(--stroke);
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .card {
            border: 1px solid var(--stroke);
            border-radius: var(--radius);
            background: var(--card);
            backdrop-filter: blur(10px);
            padding: 20px;
        }

        .btn {
            padding: 10px 20px;
            border-radius: 999px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            background: rgba(255, 255, 255, 0.08);
            color: #ffffff;
            font-weight: 700;
            cursor: pointer;
        }

        pre {
            background: rgba(0, 0, 0, 0.5);
            color: var(--teal);
            padding: 1rem;
            font-family: 'JetBrains Mono', monospace;
            border-radius: 12px;
            white-space: pre-wrap;
            word-break: break-all;
        }
    </style>
</head>
<body>
<nav style="display: flex; flex-direction: column; gap: 4px; flex-grow: 1;">
    <div class="nav-section-label">Diagnostics</div>
    <a href="/" class="nav-link">Dashboard</a>
    <a href="/settings" class="nav-link">Site Settings</a>
    
    <div class="nav-section-label">System</div>
    <a href="/system" class="nav-link">System Monitor</a>
</nav>

<div style="padding-top: 20px; border-top: 1px solid var(--stroke);">
    <div class="nav-section-label" style="margin: 0 0 10px 0;">VPS Resource Load</div>
    <div style="height: 100px; width: 100%;">
        <canvas id="resourceChart"></canvas>
    </div>
</div>

    <div class="main-container">
        <header class="app-header">
            <div style="font-weight: 700;"><span style="color: var(--teal);">‚óè</span> {{.ServerPublicIP}}</div>
            <div style="font-size: 0.85rem; color: var(--muted);">{{.ClientIP}} | Mem: {{.MemoryUsage}}</div>
        </header>
        <main style="padding: 30px;">
            {{template "main" .}}
        </main>
    </div>
</body>
</html>
{{end}}