{{template "base" .}}

{{define "main"}}
<div style="display: grid; grid-template-columns: 1fr 1fr; gap: 40px; padding: 20px;">
    <div class="card">
        <h3 style="color: var(--teal);">Add New User</h3>
        <form action="/settings" method="POST" style="display: flex; flex-direction: column; gap: 15px;">
            <input type="text" name="username" placeholder="Username" required style="background: rgba(0,0,0,0.3); border: 1px solid var(--stroke); padding: 10px; color: white; border-radius: 8px;">
            <input type="password" name="password" placeholder="Password" required style="background: rgba(0,0,0,0.3); border: 1px solid var(--stroke); padding: 10px; color: white; border-radius: 8px;">
            <button type="submit" class="btn primary">Create Account</button>
        </form>
    </div>

    <div class="card">
        <h3 style="color: var(--teal);">Authorized Users</h3>
        <table style="width: 100%; border-collapse: collapse; margin-top: 10px;">
            <thead>
                <tr style="text-align: left; color: var(--muted); border-bottom: 1px solid var(--stroke);">
                    <th style="padding: 10px;">Username</th>
                    <th style="padding: 10px;">Role</th>
                </tr>
            </thead>
            <tbody>
{{range .Usernames}}
    <tr style="border-bottom: 1px solid rgba(255,255,255,0.05);">
        <td style="padding: 10px; color: white;">{{.}}</td>
        <td style="padding: 10px; color: var(--muted);">Administrator</td>
    </tr>
{{end}}
            </tbody>
        </table>
    </div>
</div>
{{end}}